@model ECorpSales.Models.Items

@{
    ViewData["Title"] = "Details";
}

    <h1> @Html.DisplayFor(model => model.Name)</h1>

    <img size src="@Html.DisplayFor(model => model.ImageURL)" alt="a description of the image" width="100" height="100">
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                $@Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Quantity)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Seller)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Seller)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
        <a asp-action="Purchase" asp-route-id="@Model.Id">Purchase</a> |
        <a asp-action="Index">Back to List</a>
    </div>
